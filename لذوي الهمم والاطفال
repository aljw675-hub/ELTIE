                            db.createObjectStore('tasks', { keyPath: 'id', autoIncrement: true });
                            db.createObjectStore('logs', { keyPath: 'id', autoIncrement: true });
                        };
                        req.onsuccess = (e) => { Core.state.db = e.target.result; res(); };
