        async function runClock() {
            const now = new Date();
            const timeStr = `${now.getHours().toString().padStart(2, '0')}:${now.getMinutes().toString().padStart(2, '0')}`;
            
            const tx = Core.state.db.transaction('tasks', 'readonly');
            const tasks = await new Promise(r => tx.objectStore('tasks').getAll().onsuccess = (e) => r(e.target.result));
            
            tasks.forEach(t => {
                if (t.time === timeStr && !t.triggered && !Core.state.isRunning) {
                    Core.UI.triggerAlert(t);
                    t.triggered = true;
                }
            });

            // Ø§Ù„Ù…Ù‡Ø§Ù… Ø§Ù„Ø¹Ø´ÙˆØ§Ø¦ÙŠØ© (ÙƒÙ„ Ø³Ø§Ø¹Ø©)
            if (now.getMinutes() === 0 && Core.state.lastMysteryHour !== now.getHours() && !Core.state.isRunning) {
